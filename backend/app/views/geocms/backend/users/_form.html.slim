= simple_form_for [:backend, @user] do |f|
  = f.input :username
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.input :password
  = f.input :password_confirmation

  label 
    = t("simple_form.labels.user.role")
  
  div 
    = f.collection_check_boxes :role_ids, @available_roles, :id, :name, disabled: @disable_role do |b|
      .role_checkboxes
        = b.label do
          = b.check_box
          = t(b.text) 
    end


  = f.submit  :class => "btn btn-primary"
