= simple_form_for([:backend, @data_source]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :wms
    = f.input :wfs
    = f.input :csw
    = f.input :ogc
    = f.input :rest
    = f.select :wms_version, ["1.3.0", "1.1.1"]
    = f.input :not_internal, wrapper: :inline_checkbox
    = f.input :synchro,  wrapper: :inline_checkbox
    = f.collection_select  :geocms_category_id, @categories, :id, :name
  .btn.btn-default-group
    = f.button :submit, :class => "btn btn-primary"
    = link_to t("actions.default.cancel"), backend_data_sources_path, :class => "btn"
