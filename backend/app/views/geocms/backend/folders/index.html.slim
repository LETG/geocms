.page-header
  h1
    = t("modules.folders.title.index")

table.table.table-striped
  thead
    tr
      th= t("activerecord.attributes.default.name")
      th= t("activerecord.attributes.default.public")
      th= t("activerecord.attributes.default.created_at")
      th
  tbody
    - @folders.each do |folder|
      - if ( @isAdmin && @isAdminData) || folder.user_id == current_user.id 
        tr
          td
            = link_to folder.name, [:backend, folder]
          td
            = t(folder.visibility.to_s)
          td
            = folder.created_at.strftime("%d/%m/%Y")
          td
              = link_to [:edit, :backend, folder], class: "btn btn-xs btn-primary icn-only", rel: "tooltip", "data-original-title" => t("actions.default.edit") do
                i.glyphicon.glyphicon-pencil.glyphicon.glyphicon-white
              '
              = link_to [:backend, folder], confirm: "#{t('messages.confirm')}", method: :delete, class: "btn btn-danger icn-only btn-xs" do
                i.glyphicon.glyphicon-trash.glyphicon.glyphicon-white

= link_to t("modules.folders.new"), [:new, :backend, :folder], class: "btn btn-primary"
