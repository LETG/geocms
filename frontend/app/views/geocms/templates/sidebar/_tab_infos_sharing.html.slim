div ng-if="!cart.context.uuid"
  .save-project-features
    p= t "informations.features.header"
    ul.list-unstyled
      li= t "informations.features.f1"
      li= t "informations.features.f2"
      li= t "informations.features.f3"
      li= t "informations.features.f4"
div ng-if="cart.context.uuid"
  .page-header.project-name
    h3
      |{{cart.context.name}}
  div.project-description compile="cart.context.description"
  form.form-horizontal.inside-tab-pane role="form" ng-if="state != 'contexts.show'"

    .form-group
      label.col-sm-3 for="map_id" =t("informations.sharing.map_id.label")
      .col-sm-9
        input#map_id.form-control ng-model="cart.context.uuid" ng-readonly="true" text-select=""
    .form-group
      label.col-sm-3 for="direct_link" =t("informations.sharing.direct_link.label")
      .col-sm-9
        input#direct_link.form-control ng-readonly="true" ng-model="cart.context.direct_link" text-select=""
    .form-group
      label.col-sm-3 for="embed_code" =t("informations.sharing.embed.label")
      .col-sm-9
        textarea#embed_code.code.form-control ng-readonly="true" text-select="" ng-model="cart.context.embed_code" rows="3"
    == render "geocms/templates/sidebar/tab_infos_additional_sharing_options"