.geocms-popup-header
  h1 = t("geocms.popup.query.header")
.geocms-popup-body
  #popup-switch
    ul.nav.nav-pills.nav-stacked
      li.active ng-repeat="layer in filteredLayers"
        a href="" ng-click="ms.chooseLayer(layer)" {{layer.title}} ng-if="layer.queryable"
    p ng-hide="filteredLayers.length" = t("geocms.popup.query.no_infos")